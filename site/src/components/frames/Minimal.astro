---
import { twMerge } from 'tailwind-merge';

/**
 * Minimal frame component for wrapping documentation demos.
 *
 * Provides a styled container with rounded borders and background
 * matching the site's Tabs component aesthetic.
 *
 * Usage:
 * ```mdx
 * import Minimal from '@/components/frames/Minimal.astro';
 *
 * <MinimalFrame>
 *   <MyDemo client:idle />
 * </MinimalFrame>
 * ```
 */

type Props = {
  class?: string;
  margins?: 'default' | 'lg';
};

const { class: className, margins = 'default' } = Astro.props;

const marginClass = margins === 'lg' ? 'my-12' : 'my-6';
---

<div
  class={twMerge(
    'relative w-full max-w-3xl mx-auto flex rounded-lg overflow-hidden border border-light-40 dark:border-dark-80 bg-light-100 dark:bg-dark-110',
    marginClass,
    className,
  )}
>
  <slot />
</div>
