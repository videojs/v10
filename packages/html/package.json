{
  "name": "@videojs/html",
  "type": "module",
  "version": "0.1.0-alpha.1",
  "description": "HTML library for building media players",
  "license": "Apache-2.0",
  "keywords": [
    "media",
    "player",
    "html",
    "ui",
    "components",
    "videojs"
  ],
  "exports": {
