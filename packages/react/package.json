{
  "name": "@videojs/react",
  "type": "module",
  "version": "0.1.0-alpha.1",
  "description": "React library for building media players",
  "license": "Apache-2.0",
  "keywords": [
    "media",
    "player",
    "react",
    "components",
    "hooks",
