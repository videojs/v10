{
  "name": "@videojs/core",
  "type": "module",
  "version": "0.1.0-alpha.1",
  "description": "Core components and utilities for Video.js",
  "license": "Apache-2.0",
  "keywords": [
    "core",
    "media",
    "player",
    "videojs"
  ],
  "exports": {
    ".": {
      "types": "./dist/dev/index.d.ts",
      "development": "./dist/dev/index.js",
      "default": "./dist/default/index.js"
    },
    "./dom": {
      "types": "./dist/dev/dom.d.ts",
      "development": "./dist/dev/dom.js",
      "default": "./dist/default/dom.js"
    },
    "./dom/media/hls": {
      "types": "./dist/dev/dom/media/hls.d.ts",
      "development": "./dist/dev/dom/media/hls.js",
      "default": "./dist/default/dom/media/hls.js"
    }
  },
  "main": "dist/default/index.js",
  "module": "dist/default/index.js",
  "types": "dist/dev/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch ./src --no-clean",
    "dev": "pnpm run build:watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist types"
  },
  "dependencies": {
    "@videojs/store": "workspace:*",
    "@videojs/utils": "workspace:*",
    "hls.js": "^1.6.7"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
